{
  "name": "@theforce/angular",
  "version": "1.0.0",
  "publishConfig": {
    "access": "public"
  },
  "description": "Angular library for TheForce hand tracking",
  "keywords": [
    "theforce",
    "hand-tracking",
    "mediapipe",
    "angular",
    "gesture-control",
    "virtual-mouse"
  ],
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "sideEffects": false,
  "license": "MIT",
  "files": [
    "dist/**"
  ],
  "scripts": {
    "build": "tsup src/index.ts --format esm,cjs --dts --external @angular/core --target es2022",
    "dev": "tsup src/index.ts --format esm,cjs --watch --dts --external @angular/core",
    "lint": "eslint \"src/**/*.ts*\"",
    "clean": "rm -rf .turbo && rm -rf node_modules && rm -rf dist",
    "test": "jest"
  },
  "dependencies": {
    "@theforce/core": "*"
  },
  "devDependencies": {
    "@angular/core": "^16.1.7",
    "@angular/common": "^16.1.7",
    "@types/jest": "^29.5.3",
    "eslint": "^8.45.0",
    "eslint-config-custom": "*",
    "jest": "^29.6.2",
    "jest-environment-jsdom": "^29.6.2",
    "rxjs": "^7.8.1",
    "tsup": "^7.1.0",
    "typescript": "^5.1.6"
  },
  "peerDependencies": {
    "@angular/core": ">=14.0.0"
  }
}
